{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": false,
    "newLine": "LF"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "exclude": [
    "**/.yalc/*",
    "**/node_modules/*"
  ]
}